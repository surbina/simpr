{
  "manifest_version": 2,
  "name": "SimPR",
  "description": "SimPR is an extension that helps to simplify reviewing a PR",
  "version": "0.1.0",
  "permissions": [
    "https://github.com/*",
    "storage"
  ],
  "optional_permissions": [
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "page_action": {
    "default_title": "SimPR",
    "default_popup": "popup.html"
  }
}
